<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackgroundDark">
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorBackgroundDark"
        android:layout_margin="2dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        >
        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@color/colorBackgroundDark"
            >

    <ImageView
        android:id="@+id/imageViewFotoUsuarioAgregar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/colorBackground"
        android:src="@drawable/usuario"/>
    <TextView
        android:id="@+id/textViewNombreDeUsuarioAgregar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="20dp"

        android:textColor="@color/colorTexto"
        android:layout_toRightOf="@+id/imageViewFotoUsuarioAgregar"
        android:layout_marginLeft="10dp" />
    <TextView
        android:id="@+id/textViewPuntuacionUsuarioAgregar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.5"
        android:textSize="20dp"
        android:textColor="@color/colorTexto"
        android:layout_toRightOf="@+id/textViewNombreDeUsuarioAgregar"
        android:layout_marginLeft="10dp"
        android:visibility="gone"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_stars_black_24dp"
        android:layout_toRightOf="@+id/textViewPuntuacionUsuarioAgregar"
        android:layout_marginLeft="5dp"
        android:layout_alignBottom="@+id/textViewPuntuacionUsuarioAgregar"
        android:layout_marginBottom="5dp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/textViewEmailUsuarioAgregar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user.recomendator@gmail.com"
        android:textColor="@color/colorTexto"
        android:textSize="15dp"
        android:layout_toRightOf="@+id/imageViewFotoUsuarioAgregar"
        android:layout_below="@+id/textViewNombreDeUsuarioAgregar"
        android:layout_marginLeft="10dp"
        />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>